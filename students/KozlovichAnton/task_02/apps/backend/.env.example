# Backend environment variables
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bugtracker?schema=public
PORT=4000
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173

# JWT secrets and TTLs
JWT_ACCESS_SECRET=replace_me_access_secret
JWT_REFRESH_SECRET=replace_me_refresh_secret
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=7d

# Cookies
REFRESH_TOKEN_COOKIE=refreshToken
# Optional: set in production
# REFRESH_TOKEN_COOKIE_DOMAIN=your-domain.com
