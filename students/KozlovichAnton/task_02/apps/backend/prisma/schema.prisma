// Prisma schema for Bug Tracker (Variant 11)

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  manager
  developer
  user
}

enum ProjectMemberRole {
  owner
  manager
  developer
  viewer
}

enum BugStatus {
  new
  in_progress
  testing
  done
  closed
}

enum BugPriority {
  low
  medium
  high
  critical
}

model User {
  id           String        @id @default(uuid())
  username     String        @unique
  email        String        @unique
  passwordHash String
  role         Role          @default(user)
  createdAt    DateTime      @default(now())

  projects     Project[]     @relation("UserProjects")
  memberships  ProjectMember[]
  createdBugs  Bug[]         @relation("BugCreator")
  assignedBugs Bug[]         @relation("BugAssignee")
  uploads      Attachment[]  @relation("UserAttachments")
  comments     Comment[]
  refreshTokens RefreshToken[]
}

model Project {
  id          String          @id @default(uuid())
  name        String
  description String?
  ownerId     String
  isPublic    Boolean         @default(false)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  owner       User            @relation("UserProjects", fields: [ownerId], references: [id], onDelete: Cascade)
  members     ProjectMember[]
  bugs        Bug[]
}

model ProjectMember {
  id        String            @id @default(uuid())
  projectId String
  userId    String
  role      ProjectMemberRole
  joinedAt  DateTime          @default(now())

  project   Project           @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User              @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@index([projectId])
  @@index([userId])
}

model Bug {
  id          String       @id @default(uuid())
  projectId   String
  title       String
  description String?
  status      BugStatus    @default(new)
  priority    BugPriority  @default(medium)
  assignedTo  String?
  createdBy   String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee    User?        @relation("BugAssignee", fields: [assignedTo], references: [id], onDelete: SetNull)
  creator     User         @relation("BugCreator", fields: [createdBy], references: [id], onDelete: Restrict)
  attachments Attachment[]
  comments    Comment[]

  @@index([projectId])
  @@index([status])
  @@index([priority])
  @@index([assignedTo])
  @@index([createdBy])
}

model Attachment {
  id         String   @id @default(uuid())
  bugId      String
  filename   String
  filePath   String
  uploadedBy String
  uploadedAt DateTime @default(now())

  bug        Bug      @relation(fields: [bugId], references: [id], onDelete: Cascade)
  uploader   User     @relation("UserAttachments", fields: [uploadedBy], references: [id], onDelete: Cascade)

  @@index([bugId])
}

model Comment {
  id        String   @id @default(uuid())
  bugId     String
  authorId  String
  content   String
  createdAt DateTime @default(now())

  bug       Bug      @relation(fields: [bugId], references: [id], onDelete: Cascade)
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([bugId])
}

model RefreshToken {
  id               String    @id @default(uuid())
  jtiHash          String    @unique
  userId           String
  createdAt        DateTime  @default(now())
  expiresAt        DateTime
  revokedAt        DateTime?
  replacedByToken  String?
  createdByIp      String?
  userAgent        String?

  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([jtiHash])
}
